<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="hr_payroll.report_payslip">
			<t t-call="report.html_container">
		        <t t-foreach="docs" t-as="o">
		            <t t-call="report.external_layout">
		                <div class="page">
		                    <h2>Pay Slip</h2>
		                    <p t-field="o.name"/>

		                    <table class="table table-condensed table-bordered">
		                        <tr>
		                            <td><strong>Name</strong></td>
		                            <td><span t-field="o.employee_id"/></td>
		                            <td><strong>Designation</strong></td>
		                            <td><span t-field="o.employee_id.job_id"/></td>
		                        </tr>
		                        <tr>
		                            <td><strong>Address</strong></td>
		                            <td colspan="3">
		                                <div t-field="o.employee_id.address_home_id"
		                                    t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
		                            </td>
		                        </tr>
		                        <tr>
		                            <td><strong>Email</strong></td>
		                            <td><span t-field="o.employee_id.work_email"/></td>
		                            <td><strong>Identification No</strong></td>
		                            <td><span t-field="o.employee_id.identification_id"/></td>
		                        </tr>
		                        <tr>
		                            <td><strong>Reference</strong></td>
		                            <td><span t-field="o.number"/></td>
		                            <td><strong>Bank Account</strong></td>
		                            <td><span t-field="o.employee_id.otherid"/></td>
		                        </tr>
		                        <tr>
		                            <td><strong>Date From</strong></td>
		                            <td><span t-field="o.date_from"/></td>
		                            <td><strong>Date To</strong></td>
		                            <td><span t-field="o.date_to"/></td>
		                        </tr>
		                        <tr>
		                        	<td><strong>Department</strong></td>
		                        	<td><span t-field="o.department_id"/></td>
		                        </tr>
		                    </table>

	                    	<div class="row">
	                    		<t t-set="gross" t-value="0.0"/>
	                    		<t t-set="ded" t-value="0.0"/>
	                    		<t t-set="nett" t-value="0.0"/>

	                    		<div class="col-xs-6">
	                    			<table>
										<tr>
			                               <th>PENERIMAAN</th>
				                           <th><span/></th>
			                            </tr>
			                        </table>
	                    		</div>
	                    		<div class="col-xs-6">
	                    			<table>
										<tr>
				                           <th>POTONGAN</th>
				                           <th><span/></th>
			                            </tr>
			                        </table>
	                    		</div>
		                        <hr/>
								  <div class="col-xs-6">
								  	<table>
				                        <tbody>
				                            <tr t-foreach="get_payslip_lines(o.line_ids)" t-as="p">
			                                	<t t-if="p.salary_rule_id.category_id.code in ('BASIC','ALW')">
										            <td><p><span t-field="p.name"/></p></td>
										            <td><p><span t-esc="formatLang(p.amount, currency_obj=o.company_id.currency_id)"/></p></td>
										        </t>
										        <t t-if="p.salary_rule_id.category_id.code == 'GROSS'">
										        	<t t-set="gross" t-value="p.amount"/>
										        </t>
										        <t t-if="p.salary_rule_id.category_id.code == 'TDED'">
										        	<t t-set="ded" t-value="p.amount"/>
										        </t>
										        <t t-if="p.salary_rule_id.category_id.code == 'NET'">
										        	<t t-set="nett" t-value="p.amount"/>
										        </t>
										    </tr>
										</tbody>
				                    </table>
								  </div>
								  <div class="col-xs-6">
								  	<table>
				                        <tbody>
				                            <tr t-foreach="get_payslip_lines(o.line_ids)" t-as="p">
			                                	<t t-if="p.salary_rule_id.category_id.code == 'DED'">
										            <td><p><span t-field="p.name"/></p></td>
										            <td><p><span t-esc="formatLang(p.amount, currency_obj=o.company_id.currency_id)"/></p></td>
										        </t>
										    </tr>
										</tbody>
				                    </table>
								  </div>
							</div>
							
							<div class="row">
								<hr/>
								<div class="col-xs-3">
									<p><strong>Total Penerimaan</strong></p>
								</div>
								<div class="col-xs-3">
									<div class="col-xs-2"></div>
									<div class="col-xs-10">
										<p><span t-esc="formatLang(gross, currency_obj=o.company_id.currency_id)"/></p>
									</div>
								</div>
								<div class="col-xs-3">
									<p><strong>Total Potongan</strong></p>
								</div>
								<div class="col-xs-3">
									<div class="col-xs-2"></div>
									<div class="col-xs-10">
										<p><span t-esc="formatLang(ded, currency_obj=o.company_id.currency_id)"/></p>
									</div>
								</div>
								
							</div>
							
							<div class="row">
								<hr/>
								<div class="col-xs-3">
									<p><strong>Total Gaji Diterima</strong></p>
								</div>
								<div class="col-xs-3">
									<div class="col-xs-2"></div>
									<div class="col-xs-10">
										<p><span t-esc="formatLang(nett, currency_obj=o.company_id.currency_id)"/></p>
									</div>
								</div>
							</div>

							
							<div class="row">
								<hr/>
								<div class="col-xs-3">
									<p><strong>Kontak</strong></p>
									<p>Phone: <span t-field="o.company_id.hr_payslip_phone"/></p>
									<p>Email: <span t-field="o.company_id.hr_payslip_email"/></p>
								</div>
							</div>
		                </div>
		            </t>
		        </t>
		    </t>
		</template>
	</data>
</openerp>