<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="hr_payroll.report_payslip">
			<t t-call="report.html_container">
		        <t t-foreach="docs" t-as="o">
		            <t t-call="report.external_layout">
		                <div class="page">
		                    <h2>Pay Slip Ade</h2>
		                    <p t-field="o.name"/>

		                    <table class="table table-condensed table-bordered">
		                        <tr>
		                            <td><strong>Name</strong></td>
		                            <td><span t-field="o.employee_id"/></td>
		                            <td><strong>Designation</strong></td>
		                            <td><span t-field="o.employee_id.job_id"/></td>
		                        </tr>
		                        <tr>
		                            <td><strong>Address</strong></td>
		                            <td colspan="3">
		                                <div t-field="o.employee_id.address_home_id"
		                                    t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
		                            </td>
		                        </tr>
		                        <tr>
		                            <td><strong>Email</strong></td>
		                            <td><span t-field="o.employee_id.work_email"/></td>
		                            <td><strong>Identification No</strong></td>
		                            <td><span t-field="o.employee_id.identification_id"/></td>
		                        </tr>
		                        <tr>
		                            <td><strong>Reference</strong></td>
		                            <td><span t-field="o.number"/></td>
		                            <td><strong>Bank Account</strong></td>
		                            <td><span t-field="o.employee_id.otherid"/></td>
		                        </tr>
		                        <tr>
		                            <td><strong>Date From</strong></td>
		                            <td><span t-field="o.date_from"/></td>
		                            <td><strong>Date To</strong></td>
		                            <td><span t-field="o.date_to"/></td>
		                        </tr>
		                    </table>

		                    <table class="table table-condensed">
		                        <thead>
		                            <tr>
		                                <th>PENERIMAAN</th>
		                                <th></th>
		                                <th>POTONGAN</th>
		                                <th></th>
		                            </tr>
		                        </thead>
		                        <tbody>
		                            <tr t-foreach="get_payslip_lines(o.line_ids)" t-as="p">
		                            	 <td><p t-if="p.code == 'POTBRG' or p.code == 'POTHP' or p.code == 'LOAN' "><span t-field="p.name"/></p></td>
    									 <td><p t-elif="p.code != 'POTBRG' or p.code != 'POTHP' or p.code != 'LOAN'"><span t-field="p.name"/></p></td>
	                                	<!-- <t t-if="p.code == 'POTBRG' or p.code == 'POTHP' or p.code == 'LOAN' ">
								            <td><span t-field="p.name"/></td>
								            <td><span t-esc="formatLang(p.amount, currency_obj=o.company_id.currency_id)"/></td>
								        </t>	                                	
	                                	<t t-elif="p.code != 'POTBRG' or p.code != 'POTHP' or p.code != 'LOAN'">
                                			<td><span t-field="p.name"/></td>
                                			<td><span t-esc="formatLang(p.amount, currency_obj=o.company_id.currency_id)"/></td>  	
	                                	</t> -->
		                                
		                                <!-- <td><span t-esc="formatLang(p.total, currency_obj=o.company_id.currency_id)"/></td> -->
		                            </tr>
		                            <tr>
		                            	<td><strong>Total Penerimaan</strong></td>
		                            	<td>0,0</td>
		                            	<td><strong>Total Potongan</strong></td>
		                            	<td>0,0</td>
		                            </tr>
		                        </tbody>
		                    </table>

		                    <!-- <p class="text-right"><strong>Authorized signature</strong></p> -->
		                </div>
		            </t>
		        </t>
		    </t>
			<!-- <xpath expr="//div[@class='page']/table[1]" position="after">
				<tr>
					<td><strong>Department</strong></td>
					<td><span t-field="o.department_id"/></td>
				</tr>
			</xpath> -->
