<openerp>
    <data>
<!--	START MEMORANDUM	-->
        <record model="ir.actions.act_window" id="emp_pendidikan_action">
            <field name="name">EMP Pendidikan</field>
            <field name="res_model">emp.recruitment.pendidikan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="emp_pendidikan_tree_view">
            <field name="name">emp.pendidikan.tree</field>
            <field name="model">emp.recruitment.pendidikan</field>
            <field name="arch" type="xml">
                <tree string="EMP Pendidikan Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="emp_pendidikan_form_view">
            <field name="name">emp.pendidikan.form</field>
            <field name="model">emp.recruitment.pendidikan</field>
            <field name="arch" type="xml">
                <form string="EMP Pendidikan Form">
               	<group string="EMP Recruitment">
                        <group>
	                       <field name="name"/>
                        </group>
                </group>
                </form>
            </field>
        </record>
        <menuitem id="emp_pendidikan" name="Pendidikan EMP" 
                  parent="hr_salary_add.hr_sicepat_configuration"
                  action="emp_pendidikan_action"/>
    </data>
