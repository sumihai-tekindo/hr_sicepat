<openerp>
	<data>
		<record id="hr_department_struct_inherit_form" model="ir.ui.view">
			<field name="name">hr.department.struct.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form" />
            <field name="priority">32</field>
            <field name="arch" type="xml">

            	<xpath expr="//form/sheet/group[1]/field[@name='company_id']" position="after">					
					<field name='analytic_account' />
				</xpath>

				<xpath expr="//form/sheet/group[1]" position="after">					
					<notebook colspan="4">
                         <page string="Structure Template">
                           <field name="struct_ids">
                             <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="rule_ids"/>
                                <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                             </tree>
                          </field>
                         </page>
                    </notebook>
				</xpath>
			</field>
		</record>
	</data>
</openerp>