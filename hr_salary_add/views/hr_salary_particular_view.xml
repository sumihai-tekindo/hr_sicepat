<openerp>
	<data>
<!--	START KOMPONEN GAJI	-->
		<record model="ir.actions.act_window" id="komponen_gaji_action">
            <field name="name">Komponen Gaji</field>
            <field name="res_model">hr_salary_particular</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="komponen_gaji_tree_view">
            <field name="name">komponen_gaji.tree</field>
            <field name="model">hr_salary_particular</field>
            <field name="arch" type="xml">
                <tree string="Komponen Gaji Tree">
                    <field name="tanggal"/>
                    <field name="nama_cabang"/>
                    <field name="requestor"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="komponen_gaji_form_view">
            <field name="name">komponen_gaji.form</field>
            <field name="model">hr_salary_particular</field>
            <field name="arch" type="xml">
                <form string="Komponen Gaji Form">
                	<header>
                		<button name="action_submit" type="object"
                                string="Submit" states="open" class="oe_highlight"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="submit" class="oe_highlight"/>
                        <button name="action_reject" type="object"
                                string="Reject" states="submit" class="oe_highlight"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
                    <group string="Komponen Gaji">
                    	<group>
                    		<field name="tanggal" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="nama_cabang" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="requestor" readonly="1"/>
                    	</group>
                    	<group></group>
                    </group>
                    <group string="Detail">
                    	<group>
                    		<field name="jabatan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="uang_makan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="transport" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="uang_kerajinan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="tunj_operasional" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="tunj_jabatan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="service_motor" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
                    	</group>
                    	<group></group>
                    </group>
                </form>
            </field>
        </record>
<!--    END OF KOMPONEN GAJI    -->
        
<!--    START MENU ITEM    -->
		<menuitem id="hr_sicepat_configuration" name="Sicepat" 
        		  parent="hr.menu_hr_configuration" sequence="1"/>
        <menuitem id="komponen_gaji_menu" name="Komponen Gaji" 
        		  parent="hr_sicepat_configuration"
                  action="komponen_gaji_action" sequence="1"/>
<!--    END OF MENU ITEM    	-->
	</data>
</openerp>