<openerp>
	<data>
<!--	START KOMPONEN GAJI	-->
		<record model="ir.actions.act_window" id="komponen_gaji_action">
            <field name="name">komponen_gaji</field>
            <field name="res_model">hr_salary_particular</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="komponen_gaji_tree_view">
            <field name="name">komponen_gaji.tree</field>
            <field name="model">hr_salary_particular</field>
            <field name="arch" type="xml">
                <tree string="Komponen Gaji Tree">
                    <field name="tanggal"/>
                    <field name="nama_cabang"/>
                    <field name="requestor"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="komponen_gaji_form_view">
            <field name="name">komponen_gaji.form</field>
            <field name="model">hr_salary_particular</field>
            <field name="arch" type="xml">
                <form string="Komponen Gaji Form">
                	<header>
                		<button name="action_submit" type="object"
                                string="Submit" states="open"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="submit"/>
                        <button name="action_reject" type="object"
                                string="Reject" states="submit"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
                    <group string="Komponen Gaji">
                    	<field name="tanggal"/>
                    	<field name="nama_cabang"/>
                    	<field name="requestor"/>
                    </group>
                    <group string="Detail">
                    	<field name="jabatan"/>
                		<field name="uang_makan"/>
                		<field name="transport"/>
                		<field name="uang_kerajinan"/>
                		<field name="tunj_operasional"/>
                		<field name="tunj_jabatan"/>
                		<field name="service_motor"/>
                    </group>
                </form>
            </field>
        </record>
<!--    END OF KOMPONEN GAJI    -->
        
<!--    START MENU ITEM    -->
		<menuitem id="main_hr_menu" name="Human Resource"/>
        <menuitem id="hr_menu" name="Human Resource"
                  parent="main_hr_menu"/>
        <menuitem id="komponen_gaji_menu" name="Komponen Gaji" 
        		  parent="hr_menu"
                  action="komponen_gaji_action" sequence="1"/>
<!--    END OF MENU ITEM    	-->
	</data>
</openerp>