<openerp>
	<data>
<!--	START TARGET PAKET	-->
		<record model="ir.actions.act_window" id="target_paket_action">
            <field name="name">Target Paket</field>
            <field name="res_model">delivery_package</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="target_paket_tree_view">
            <field name="name">target_paket.tree</field>
            <field name="model">delivery_package</field>
            <field name="arch" type="xml">
                <tree string="Target Paket Tree">
                    <field name="periode"/>
                    <field name="nama_cabang"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="target_paket_form_view">
            <field name="name">target_paket.form</field>
            <field name="model">delivery_package</field>
            <field name="arch" type="xml">
                <form string="Target Paket Form">
                	<header>
                		<button name="action_submit" type="object"
                                string="Submit" states="open" class="oe_highlight"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="submit" class="oe_highlight"/>
                        <button name="action_reject" type="object"
                                string="Reject" states="submit" class="oe_highlight"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
	            	<group>
	            		<group string="Target Paket">
	                    	<field name="periode" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="nama_cabang" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="target_paket" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="target_paket_bulan_lalu" readonly="1"/>
	                    	<field name="pertambahan_bonus" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="pertambahan_bonus_bulan_lalu" readonly="1"/>
	                    </group>
	                    <group></group>
	            	</group>
                </form>
            </field>
        </record>
<!--    END OF TARGET PAKET    -->
<!--    START MENU ITEM    -->
        <menuitem id="target_menu" name="Target Paket" 
        		  parent="hr_sicepat_configuration"
                  action="target_paket_action" sequence="4"/>
<!--    END OF MENU ITEM    	-->
	</data>
</openerp>