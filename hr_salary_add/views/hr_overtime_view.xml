<openerp>
	<data>
<!--	START LEMBURAN	-->
		<record model="ir.actions.act_window" id="overtime_action">
            <field name="name">Lemburan Karyawan</field>
            <field name="res_model">hr_overtime</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="overtime_tree_view">
            <field name="name">overtime.tree</field>
            <field name="model">hr_overtime</field>
            <field name="arch" type="xml">
                <tree string="Overtime Tree">
                    <field name="tanggal"/>
                    <field name="requestor"/>
	                <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="overtime_form_view">
            <field name="name">overtime.form</field>
            <field name="model">hr_overtime</field>
            <field name="arch" type="xml">
                <form string="Overtime Form">
                	<header>
                		<button name="action_submit" type="object"
                                string="Submit" states="open" class="oe_highlight"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="submit" class="oe_highlight"/>
                        <button name="action_reject" type="object"
                                string="Reject" states="submit" class="oe_highlight"/>
                        <button name="action_proses" type="object"
                                string="Proses di Gaji" states="approved" class="oe_highlight"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
	            	<group>
	            		<group string="Lemburan">
		            		<field name="tanggal" attrs="{'readonly':['|','|',('state','=','approved'),('state','=','reject'),('state','=','proses')]}"/>
		                	<field name="requestor" readonly="1"/>
		            	</group>
		            	<group></group>
	            	</group>
                    <field name="overtime_ids" attrs="{'readonly':['|','|',('state','=','approved'),('state','=','reject'),('state','=','proses')]}">
                    	<tree string="Detail">
	                    	<field name="nik"/>
                    		<field name="nama_cabang"/>
	                		<field name="nilai"/>
	                		<field name="alasan"/>
	                		<field name="state"/>
	                		<button name="action_cancel" states="draft" type="object" string="Reject Lemburan" icon="gtk-cancel"/>
                            <button name="action_confirm" states="draft" type="object" string="Confirm Lemburan" icon="gtk-apply"/>
                		</tree>
                		<form>
                			<group string="Lemburan">
	                			<field name="nik"/>
	                			<field name="nama_cabang"/>
		                		<field name="nilai"/>
		                		<field name="alasan"/>
	                		</group>
                		</form>
                    </field>
                </form>
            </field>
        </record>
<!--    END OF LEMBURAN    -->
	
<!--    START MENU ITEM    -->
        <menuitem id="lemburan_menu" name="Lemburan" 
        		  parent="hr_sicepat_configuration"
                  action="overtime_action" sequence="3"/>
<!--    END OF MENU ITEM    	-->

	</data>
</openerp>