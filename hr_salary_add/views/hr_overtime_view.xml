<openerp>
	<data>
<!--	START LEMBURAN	-->
		<record model="ir.actions.act_window" id="overtime_action">
            <field name="name">Overtime</field>
            <field name="res_model">hr.overtime</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="overtime_view_tree">
            <field name="name">overtime.tree</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <tree string="Overtime Tree">
                    <field name="name"/>
                    <field name="tanggal"/>
                    <field name="requestor"/>
                    <field name="nama_cabang"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="overtime_view_form">
            <field name="name">overtime.form</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <form string="Overtime Form">
                	<header>
                		<button name="action_submit" type="object" string="Submit" states="open"/>
                        <button name="action_approve" type="object" string="Approve" states="submit"/>
                        <button name="action_reject" type="object" string="Reject" states="submit"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
                	<sheet>
		            	<group string="Lemburan">
		            		<field name="name"/>
		            		<field name="tanggal"/>
		                	<field name="requestor"/>
		                	<field name="nama_cabang"/>
		            	</group>
	                    <field name="overtime_ids" attrs="{'readonly': [('state','not in',('open', 'submit'))]}">
	                    	<tree string="Detail">
		                    	<field name="nik"/>
		                    	<field name="name" invisible="1"/>
		                		<field name="nilai"/>
		                		<field name="alasan"/>
		                		<field name="state" invisible="1"/>
		                		<button name="action_cancel" states="draft" string="Reject Lemburan" icon="gtk-cancel"/>
	                            <button name="action_confirm" states="draft" string="Confirm Lemburan" icon="gtk-apply"/>
	                		</tree>
	                		<form name="overtime_ids">
	                			<group string="Lemburan">
		                			<field name="nik"/>
			                    	<field name="name" invisible="1"/>
			                		<field name="nilai"/>
			                		<field name="alasan"/>
		                		</group>
	                		</form>
	                    </field>
	            	</sheet>
                </form>
            </field>
        </record>
<!--    END OF LEMBURAN    -->
	
<!--    START MENU ITEM    -->
        <menuitem id="lemburan_menu"
			name="Lemburan" 
			parent="hr_menu"
			action="overtime_action"
			sequence="3"/>
<!--    END OF MENU ITEM    	-->

	</data>
</openerp>