<openerp>
	<data>
<!--	START LOAN	-->
		<record model="ir.actions.act_window" id="loan_action">
            <field name="name">Pinjaman Karyawan</field>
            <field name="res_model">hr_loan</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="loan_tree_view">
            <field name="name">loan.tree</field>
            <field name="model">hr_loan</field>
            <field name="arch" type="xml">
                <tree string="Loan Tree">
                    <field name="tanggal"/>
                    <field name="nama_karyawan"/>
                    <field name="jabatan"/>
                    <field name="nama_cabang"/>
                    <field name="nilai_pinjaman"/>
                    <field name="sisa_pinjaman"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="loan_form_view">
            <field name="name">loan.form</field>
            <field name="model">hr_loan</field>
            <field name="arch" type="xml">
                <form string="Loan Form">
                	<header>
                		<button name="action_submit" type="object"
                                string="Submit" states="open" class="oe_highlight"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="submit" class="oe_highlight"/>
                        <button name="action_reject" type="object"
                                string="Reject" states="submit" class="oe_highlight"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
	            	<group string="Pinjaman Karyawan">
	            		<group>
	            			<field name="tanggal" attrs="{'readonly':[('state','!=','open')]}"/>
		                    <field name="nama_karyawan" attrs="{'readonly':[('state','!=','open')]}"/>
		                    <field name="jabatan" attrs="{'readonly':[('state','!=','open')]}"/>
		                    <field name="nama_cabang" attrs="{'readonly':[('state','!=','open')]}"/>
	            		</group>
	            		<group>
	            			<field name="nilai_pinjaman" attrs="{'readonly':[('state','!=','open')]}"/>
		                    <field name="jumlah_cicilan" attrs="{'readonly':[('state','!=','open')]}"/>
		                    <field name="cicilan_per_bulan" readonly="1"/>
		                    <field name="bulan_awal_pemotongan" attrs="{'readonly':[('state','!=','open')]}"/>
		                    <field name="keperluan" attrs="{'readonly':[('state','!=','open')]}"/>
		                    <field name="nama_bank" attrs="{'readonly':[('state','!=','open')]}"/>
		                    <field name="no_rekening" attrs="{'readonly':[('state','!=','open')]}"/>
	            		</group>
	            	</group>
                    <field name="loan_ids" context="{'loan_id':id}" attrs="{'invisible':[('state','!=','approved')]}">
                    	<tree string="Detail" editable="bottom">
	                    	<field name="tanggal_cicil"/>
	                    	<field name="nilai_cicilan" on_change="compute_nilai_cicilan(nilai_cicilan, parent.cicilan_per_bulan, parent.nilai_pinjaman)"/>
	                		<field name="total_nilai_cicilan"/>
	                		<field name="sisa_pinjaman"/>
	                		<field name="keterangan"/>
	                		<field name="posted"/>
						</tree>
                    </field>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="loan_search_view">
            <field name="name">loan.search</field>
            <field name="model">hr_loan</field>
            <field name="arch" type="xml">
                <search string="Loan Tree">
                	<field name="name"/>
                    <field name="nama_karyawan"/>
                    <field name="jabatan"/>
                    <field name="nama_cabang"/>
                </search>
            </field>
        </record>
<!--    END OF LOAN    -->
	
<!--    START MENU ITEM    -->
        <menuitem id="loan_menu" name="Pinjaman" 
        		  parent="hr_sicepat_salary"
                  action="loan_action" sequence="9"/>
<!--    END OF MENU ITEM    	-->

	</data>
</openerp>