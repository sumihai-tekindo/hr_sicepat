<openerp>
	<data>
<!--	START LOAN	-->
		<record model="ir.actions.act_window" id="loan_action">
            <field name="name">Loans</field>
            <field name="res_model">hr_loan</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="loan_tree_view">
            <field name="name">loan.tree</field>
            <field name="model">hr_loan</field>
            <field name="arch" type="xml">
                <tree string="Loan Tree">
                    <field name="tanggal"/>
                    <field name="nama_karyawan"/>
                    <field name="jabatan"/>
                    <field name="nama_cabang"/>
                    <field name="nilai_pinjaman"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="loan_form_view">
            <field name="name">loan.form</field>
            <field name="model">hr_loan</field>
            <field name="arch" type="xml">
                <form string="Loan Form">
                	<header>
                		<button name="action_submit" type="object"
                                string="Submit" states="open"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="submit"/>
                        <button name="action_reject" type="object"
                                string="Reject" states="submit"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
	            	<group string="Lemburan">
	            		<field name="tanggal"/>
	                    <field name="nama_karyawan"/>
	                    <field name="jabatan"/>
	                    <field name="nama_cabang"/>
	                    <field name="nilai_pinjaman"  on_change="compute_cicilan_per_bulan(nilai_pinjaman, jumlah_cicilan)"/>
	                    <field name="jumlah_cicilan" on_change="compute_cicilan_per_bulan(nilai_pinjaman, jumlah_cicilan)"/>
	                    <field name="cicilan_per_bulan"/>
	                    <field name="bulan_awal_pemotongan"/>
	                    <field name="keperluan"/>
	                    <field name="nama_bank"/>
	                    <field name="no_rekening"/>
	            	</group>
                    <field name="loan_ids" context="{'loan_id':id}">
                    	<tree string="Detail" editable="bottom">
	                    	<field name="tanggal_cicil"/>
	                    	<field name="nilai_cicilan" on_change="compute_nilai_cicilan(nilai_cicilan,parent.cicilan_per_bulan,parent.nilai_pinjaman)"/>
	                		<field name="total_nilai_cicilan"/>
	                		<field name="sisa_pinjaman"/>
	                		<field name="keterangan"/>
	                		<field name="posted"/>
						</tree>
                		<form>
                			<group string="Pinjaman">
	                			<field name="tanggal_cicil"/>
		                    	<field name="nilai_cicilan"/>
		                		<field name="total_nilai_cicilan"/>
		                		<field name="sisa_pinjaman"/>
		                		<field name="keterangan"/>
		                		<field name="posted"/>
	                		</group>
                		</form>
                    </field>
                </form>
            </field>
        </record>
<!--    END OF LOAN    -->
	
<!--    START MENU ITEM    -->
        <menuitem id="loan_menu" name="Pinjaman" 
        		  parent="hr_menu"
                  action="loan_action" sequence="9"/>
<!--    END OF MENU ITEM    	-->

	</data>
</openerp>