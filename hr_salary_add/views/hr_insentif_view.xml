<openerp>
	<data>
<!--	START TUNJANGAN LAIN-LAIN	-->
		<record model="ir.actions.act_window" id="insentif_action">
            <field name="name">Insentif</field>
            <field name="res_model">hr_insentif</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="insentif_tree_view">
            <field name="name">insentif.tree</field>
            <field name="model">hr_insentif</field>
            <field name="arch" type="xml">
                <tree string="Insentif Tree">
                    <field name="tanggal"/>
                    <field name="nama_cabang"/>
                    <field name="requestor"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="insentif_form_view">
            <field name="name">insentif.form</field>
            <field name="model">hr_insentif</field>
            <field name="arch" type="xml">
                <form string="Insentif Form">
                	<header>
                		<button name="action_submit" type="object"
                                string="Submit" states="open" class="oe_highlight"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="submit" class="oe_highlight"/>
                        <button name="action_reject" type="object"
                                string="Reject" states="submit" class="oe_highlight"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
	            	<group>
	            		<group string="Insentif (Bonus Tambahan)">
	                    	<field name="tanggal" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="requestor" readonly="1"/>
	                    </group>
	                    <group></group>
	                </group>
	                <group>
	                    <group string="Detail">
	                    	<field name="nama_karyawan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="jabatan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="nama_cabang" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="nilai_insentif" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="alasan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    </group>
	                    <group></group>
	            	</group>
                </form>
            </field>
        </record>
<!--    END OF TUNJANGAN LAIN-LAIN    -->

<!--    START MENU ITEM    -->
        <menuitem id="insentif_menu" name="Insentif" 
        		  parent="hr_sicepat_configuration"
                  action="insentif_action" sequence="2"/>
<!--    END OF MENU ITEM    	-->
	
	</data>
</openerp>