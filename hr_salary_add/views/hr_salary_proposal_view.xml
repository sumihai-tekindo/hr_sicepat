<openerp>
	<data>
<!--	START SALARY PROPOSAL	-->
		<record model="ir.actions.act_window" id="salary_proposal_action">
            <field name="name">Usulan Kenaikan Gaji</field>
            <field name="res_model">hr_salary_proposal</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="salary_proposal_tree_view">
            <field name="name">salary_proposal.tree</field>
            <field name="model">hr_salary_proposal</field>
            <field name="arch" type="xml">
                <tree string="Salary Proposal Tree">
                    <field name="tanggal"/>
                    <field name="requestor"/>
                    <field name="nama_karyawan"/>
                    <field name="nama_cabang"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="salary_proposal_form_view">
            <field name="name">salary_proposal.form</field>
            <field name="model">hr_salary_proposal</field>
            <field name="arch" type="xml">
                <form string="Salary Proposal Form">
                	<header>
                		<button name="action_submit" type="object"
                                string="Submit" states="open" class="oe_highlight"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="submit" class="oe_highlight"/>
                        <button name="action_reject" type="object"
                                string="Reject" states="submit"/>
	            		<field name="state" widget="statusbar"/>
	            	</header>
	            	<group>
	            		<group string="Usulan Kenaikan Gaji">
	                    	<field name="tanggal" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="requestor" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}" readonly="1"/>
	                    	<field name="nama_cabang" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    </group>
	                    <group></group>
	            	</group>
                    <group string="Detail">
                    	<group>
                    		<field name="nama_karyawan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                    	<field name="jabatan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="gaji_semula" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="kenaikan_gaji" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
	                		<field name="gaji_usulan" readonly="1"/>
	                		<field name="alasan" attrs="{'readonly':['|',('state','=','approved'),('state','=','reject')]}"/>
                    	</group>
                    	<group></group>
                    </group>
                </form>
            </field>
        </record>
<!--    END OF EMPLOYEE MUTASI    -->
        
<!--    START MENU ITEM    -->
        <menuitem id="salary_proposal" name="Usulan Gaji" 
        		  parent="hr_sicepat_salary"
                  action="salary_proposal_action" sequence="7"/>
<!--    END OF MENU ITEM    	-->
	</data>
</openerp>